<%= @user.name %><br>
<%= @user.email %><br>
<div id="profile_pic">
  <img src="<%=@user.pic_url%>">
</div><br><br>

<% if current_user %>
  <% if @user.id == current_user.id  %>
    <%= link_to "Edit", edit_user_path(@user) %><br>
    <%= link_to "Delete", user_path(@user), method: :delete %>
    <%= link_to "Add Question", new_question_path %>
  <% end %>
<% end %>
<div class="question-list">
  <ul>
    <% @user.questions.each do |question| %>
      <li><%= question.title %></li>
    <% end %>
  </ul>
</div>
