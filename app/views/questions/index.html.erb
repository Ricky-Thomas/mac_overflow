<div class="container" id="scrolling-ct">
  <h1>All Questions</h1><br>

  <div class="questions_list">
    <% @questions.each do |question| %>
      <%= link_to "#{question.title}", question_path(question) %> <%= question.answers.count != 1 ? "#{question.answers.count} answers" : "1 answer" %><br><hr>
    <% end %>
  </div>
</div>
