<div class="question_prompt">
  <h1><%= @question.title %></h1><br><hr>
  <%= @question.prompt %><br><br>
  By <%= @question.user.name %><br>
  Edited <%= ((Time.now.utc - @question.updated_at)/3600).round(2).to_s %> hrs ago<br>
  Answered<%= ((Time.now.utc - @question.created_at)/3600).round(2).to_s %> hrs ago
</div>

<hr><br>

<div class="answers_list">
  <% @answers.each do |answer| %>
    <strong>Answer:</strong><br>
    <%= answer.content %><br><br>
    By <%= answer.user.name %><br>
    Edited <%= ((Time.now.utc - answer.updated_at)/3600).round(2).to_s %>hrs ago<br>
    Answered <%= ((Time.now.utc - answer.updated_at)/3600).round(2).to_s %>hrs ago<br>
    <% if current_user.id == answer.user_id %>
      <%= link_to "Delete", [@question, answer], :method => :delete %><br>
      <%= link_to 'Edit', [@question, answer] %>
    <% end %>

    <hr>
  <% end %>
</div>

<%= link_to "new answer", new_question_answer_path(@question) %>
